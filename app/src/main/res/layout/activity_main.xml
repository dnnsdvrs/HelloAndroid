<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_rect">

    <ImageView
        android:id="@+id/udacity-logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:paddingBottom="16dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:paddingTop="16dp"
        android:src="@drawable/ic_udacity_logo" />

    <ImageView
        android:id="@+id/teachers-pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/udacity-logo"
        android:scaleType="centerCrop"
        android:alpha="0.7"
        android:src="@drawable/udacity_teachers"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teachers-pic"
        android:layout_marginTop="-32dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/rounded_corners_rect"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:elevation="8dp"
        android:id="@+id/whitecard-viewgroup">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginVertical="24dp">

            <ImageView
                android:id="@+id/marker-svg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teachers-pic"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_map_marker" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/address"
                android:textAlignment="center"
                android:fontFamily="sans-serif-thin"
                android:textSize="18sp"
                android:autoLink="map"
                android:textColorLink="@color/textgray"/>
        </LinearLayout>

        <View
            style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp">

            <ImageView
                android:id="@+id/phone-svg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_phone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="@string/phone"
                android:fontFamily="sans-serif-thin"
                android:textSize="18sp"
                android:autoLink="phone"
                android:textColorLink="@color/textgray"/>

        </LinearLayout>

        <View
            style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/web-svg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_web" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"
                android:text="@string/url"
                android:textAlignment="center"
                android:textSize="18sp"
                android:autoLink="web"
                android:textColorLink="@color/textgray"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook"
            android:clickable="true"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_github_circle"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_twitter"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_youtube_play"/>

    </LinearLayout>

</RelativeLayout>